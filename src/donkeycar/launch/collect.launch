<launch>

    <include file="$(find donkeycar)/launch/drive.launch"/>

    <env name="GSCAM_CONFIG" value="nvarguscamerasrc 
                                    ! video/x-raw(memory:NVMM), width=1280, height=720, format=NV12, framerate=30/1 
                                    ! nvvidconv flip-method=2
                                    ! video/x-raw, width=224, height=224, format=BGRx
                                    ! videocrop left=0 right=0 top=80 bottom=0
                                    ! videoconvert " />

    <node pkg="gscam" type="gscam" name="camera">
    </node>

    <node pkg="recorder" type="recorder_node" name="recorder_node" output="screen">
        <param name="data_folder" value="$(find donkeycar)/data"/>
        <param name="record_button" value="5"/>
        <param name="downsample_rate" value="30"/>
    </node>
</launch>
